{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "esModuleInterop": true,
    "module": "nodenext",
    "skipLibCheck": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "waku-jotai/minimal": ["./src/minimal/index.ts"],
      "waku-jotai/router": ["./src/router/index.ts"]
    },
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["dist", "examples"]
}
